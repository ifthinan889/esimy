# Public folder .htaccess for MVC
RewriteEngine On

# Handle admin asset requests
RewriteCond %{REQUEST_URI} ^/admin/assets/(.*)$
RewriteRule ^admin/assets/(.*)$ assets/$1 [L]

# Ignore existing files and directories
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Route everything through index.php
RewriteRule ^(.*)$ index.php?url=$1 [L,QSA]

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options SAMEORIGIN
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Prevent access to sensitive files
<Files "*.php">
    <RequireAll>
        Require all granted
    </RequireAll>
</Files>

# Block access to config and src from public
RewriteRule ^(config|src)/ - [F,L]