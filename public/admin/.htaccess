# Admin Panel .htaccess
RewriteEngine On

# Allow access to admin files
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Redirect to login if not authenticated (handled by PHP)
# RewriteRule ^(.*)$ login.php [L,QSA]

# Security: Block access to sensitive files
<Files "*.log">
    Require all denied
</Files>

<Files "*.sql">
    Require all denied
</Files>

<Files "*.bak">
    Require all denied
</Files>

# Allow CSS and JS from parent assets folder
RewriteCond %{REQUEST_URI} ^/admin/assets/
RewriteRule ^assets/(.*)$ ../assets/$1 [L]

# Security headers for admin
<IfModule mod_headers.c>
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>